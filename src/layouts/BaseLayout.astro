---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'NorthWoods Sentinel',
  description = 'Essays, experiments, and systems thinking'
} = Astro.props;

const fullTitle = title === 'NorthWoods Sentinel' ? title : `${title} | NorthWoods Sentinel`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Social Media -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <title>{fullTitle}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title="NorthWoods Sentinel" href="/rss.xml" />

    <!-- Google Analytics GA4 -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-T97366J39P"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-T97366J39P');
    </script>
  </head>
  <body>
    <header class="site-header">
      <nav class="container">
        <div class="nav-wrapper">
          <a href="/" class="site-title">NorthWoods Sentinel</a>
          <div class="nav-links">
            <a href="/essays">Essays</a>
            <a href="/flowlabs">FlowLabs</a>
            <a href="/systems">Systems</a>
            <a href="/media">Media</a>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <p>&copy; {new Date().getFullYear()} NorthWoods Sentinel. All rights reserved.</p>
      </div>
    </footer>

    <style>
      .site-header {
        border-bottom: 1px solid var(--color-border);
        padding: var(--spacing-md) 0;
        background-color: var(--color-bg);
        position: sticky;
        top: 0;
        z-index: 100;
      }

      .nav-wrapper {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: var(--spacing-md);
      }

      .site-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--color-text);
        text-decoration: none;
      }

      .site-title:hover {
        color: var(--color-accent);
      }

      .nav-links {
        display: flex;
        gap: var(--spacing-md);
      }

      .nav-links a {
        color: var(--color-text-muted);
        font-size: 0.95rem;
        transition: color 0.2s;
      }

      .nav-links a:hover {
        color: var(--color-accent);
        opacity: 1;
      }

      main {
        min-height: calc(100vh - 200px);
        padding: var(--spacing-2xl) 0;
      }

      .site-footer {
        border-top: 1px solid var(--color-border);
        padding: var(--spacing-xl) 0;
        margin-top: var(--spacing-2xl);
        color: var(--color-text-muted);
        font-size: 0.9rem;
      }

      @media (max-width: 768px) {
        .nav-wrapper {
          flex-direction: column;
          align-items: flex-start;
          gap: var(--spacing-sm);
        }

        .nav-links {
          gap: var(--spacing-sm);
        }

        .nav-links a {
          font-size: 0.9rem;
        }
      }
    </style>
  </body>
</html>
