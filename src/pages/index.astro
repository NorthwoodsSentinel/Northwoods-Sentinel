---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get recent essays
const allEssays = await getCollection('essays', ({ data }) => {
  return data.draft !== true;
});
const recentEssays = allEssays
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);
---

<BaseLayout>
  <div class="container">
    <section class="hero">
      <h1>NorthWoods Sentinel</h1>
      <p class="lead">
        Essays, experiments, and systems thinking on flow, human performance, and the intersection of AI and creative work.
      </p>
    </section>

    <section class="sections-grid">
      <a href="/essays" class="section-card">
        <h2>Essays</h2>
        <p>Long-form writing on creativity, systems, and transformation</p>
      </a>

      <a href="/flowlabs" class="section-card">
        <h2>FlowLabs</h2>
        <p>Experiments in flow states, biometrics, and human performance</p>
      </a>

      <a href="/systems" class="section-card">
        <h2>Systems</h2>
        <p>Technical thinking, architecture, and cybersecurity insights</p>
      </a>

      <a href="/media" class="section-card">
        <h2>Media</h2>
        <p>Video content, talks, and multimedia exploration</p>
      </a>
    </section>

    {recentEssays.length > 0 && (
      <section class="recent-essays">
        <h2>Recent Writing</h2>
        <ul class="essay-list">
          {recentEssays.map((essay) => (
            <li>
              <a href={`/essays/${essay.slug}`} class="essay-item">
                <h3>{essay.data.title}</h3>
                <p>{essay.data.description}</p>
                <time datetime={essay.data.date.toISOString()}>
                  {essay.data.date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </a>
            </li>
          ))}
        </ul>
      </section>
    )}
  </div>

  <style>
    .hero {
      text-align: center;
      margin-bottom: var(--spacing-2xl);
      padding: var(--spacing-xl) 0;
    }

    .hero h1 {
      font-size: 3rem;
      margin-bottom: var(--spacing-md);
      margin-top: 0;
    }

    .lead {
      font-size: 1.2rem;
      color: var(--color-text-muted);
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.6;
    }

    .sections-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--spacing-md);
      margin-bottom: var(--spacing-2xl);
    }

    .section-card {
      padding: var(--spacing-lg);
      border: 1px solid var(--color-border);
      border-radius: 8px;
      text-decoration: none;
      color: var(--color-text);
      transition: border-color 0.2s, transform 0.2s;
    }

    .section-card:hover {
      border-color: var(--color-accent);
      transform: translateY(-2px);
    }

    .section-card h2 {
      margin-top: 0;
      margin-bottom: var(--spacing-xs);
      color: var(--color-accent);
    }

    .section-card p {
      margin: 0;
      color: var(--color-text-muted);
      font-size: 0.95rem;
    }

    .recent-essays {
      margin-top: var(--spacing-2xl);
    }

    .recent-essays h2 {
      margin-bottom: var(--spacing-lg);
    }

    .essay-list {
      list-style: none;
      margin: 0;
      padding: 0;
    }

    .essay-list li {
      margin-bottom: var(--spacing-lg);
    }

    .essay-item {
      display: block;
      text-decoration: none;
      color: var(--color-text);
      padding: var(--spacing-md);
      border-left: 3px solid transparent;
      transition: border-color 0.2s, padding-left 0.2s;
    }

    .essay-item:hover {
      border-left-color: var(--color-accent);
      padding-left: var(--spacing-lg);
    }

    .essay-item h3 {
      margin-top: 0;
      margin-bottom: var(--spacing-xs);
      font-size: 1.3rem;
    }

    .essay-item p {
      margin-bottom: var(--spacing-xs);
      color: var(--color-text-muted);
    }

    .essay-item time {
      font-size: 0.9rem;
      color: var(--color-text-muted);
    }

    @media (max-width: 768px) {
      .hero h1 {
        font-size: 2rem;
      }

      .lead {
        font-size: 1.1rem;
      }

      .sections-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</BaseLayout>
